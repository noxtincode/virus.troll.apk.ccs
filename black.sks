<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Terminal MÃ¡gica ğŸŒˆğŸ’–</title>
  <style>
    body {
      margin: 0;
      overflow: hidden;
      background-color: black;
      font-family: 'Courier New', monospace;
      color: #ff00ff;
    }

    .terminal {
      padding: 20px;
      white-space: pre-wrap;
      position: relative;
      z-index: 10;
      font-size: 18px;
    }

    .command {
      color: #ff69b4;
      text-shadow: 0 0 5px #ff00ff;
      margin-bottom: 10px;
    }

    canvas {
      position: fixed;
      top: 0;
      left: 0;
      z-index: 0;
    }

    .message {
      position: absolute;
      color: white;
      font-size: 14px;
      opacity: 0;
      transition: opacity 1s;
    }

    audio {
      display: none;
    }
  </style>
</head>
<body>
  <canvas id="rainbowCanvas"></canvas>
  <div class="terminal" id="terminal"></div>

  <!-- MÃºsica mÃ¡gica -->
  <audio autoplay loop>
    <source src="https://cdn.pixabay.com/download/audio/2023/03/13/audio_2b4a170e7a.mp3?filename=relaxing-magical-rainforest-ambient-loop-139863.mp3" type="audio/mpeg">
  </audio>

  <script>
    // Mensajes mÃ¡gicos que aparecen con estrellas fugaces
    const messages = [
      "Gracias por tu luz ğŸ’«",
      "Tu amistad brilla ğŸŒŸ",
      "Eres parte de esta magia âœ¨",
      "Contigo, el cielo se llena de color ğŸŒˆ",
      "Nunca dejes de soÃ±ar ğŸ’–"
    ];

    // Comandos mÃ¡gicos de corazones
    const heartCommands = [
      "â¤ï¸ Iniciando protocolo de cariÃ±o...",
      "ğŸ’– Conectando con energÃ­a bonita...",
      "ğŸ’˜ Cargando abrazos digitales...",
      "ğŸ’• Verificando conexiÃ³n mÃ¡gica...",
      "ğŸ§¡ Gracias por tu compaÃ±Ã­a...",
      "Â¿Y esto cuÃ¡ndo crece? jaja ğŸŒ±"
    ];

    const terminal = document.getElementById("terminal");

    // Escribir los comandos uno por uno
    let i = 0;
    function typeCommands() {
      if (i < heartCommands.length) {
        const cmd = document.createElement("div");
        cmd.className = "command";
        cmd.textContent = heartCommands[i];
        terminal.appendChild(cmd);
        i++;
        setTimeout(typeCommands, 1500);
      }
    }
    typeCommands();

    // Estrellas fugaces con mensajes
    function createFallingStar() {
      const star = document.createElement("div");
      star.className = "message";
      star.textContent = messages[Math.floor(Math.random() * messages.length)];
      star.style.left = Math.random() * window.innerWidth + "px";
      star.style.top = "0px";
      document.body.appendChild(star);

      let pos = 0;
      const fall = setInterval(() => {
        pos += 5;
        star.style.top = pos + "px";
        star.style.opacity = "1";
        if (pos > window.innerHeight) {
          clearInterval(fall);
          star.remove();
        }
      }, 50);
    }
    setInterval(createFallingStar, 3000);

    // ArcoÃ­ris y rayos mÃ¡gicos en canvas
    const canvas = document.getElementById("rainbowCanvas");
    const ctx = canvas.getContext("2d");
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    function drawRainbowLightning() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      for (let i = 0; i < 100; i++) {
        const x = Math.random() * canvas.width;
        const y = Math.random() * canvas.height;
        const size = Math.random() * 2;
        ctx.beginPath();
        ctx.arc(x, y, size, 0, Math.PI * 2);
        ctx.fillStyle = `hsl(${Math.random() * 360}, 100%, 50%)`;
        ctx.fill();
      }

      // RelÃ¡mpago
      if (Math.random() < 0.05) {
        ctx.strokeStyle = "#ffffff";
        ctx.beginPath();
        ctx.moveTo(Math.random() * canvas.width, 0);
        ctx.lineTo(Math.random() * canvas.width, canvas.height);
        ctx.stroke();
      }

      requestAnimationFrame(drawRainbowLightning);
    }

    drawRainbowLightning();
  </script>
</body>
</html>
